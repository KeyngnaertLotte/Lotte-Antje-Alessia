{
  "name": "lotte-antje-alessia",
  "version": "0.0.0",
  "scripts": {
    "dev": "npx lerna run --scope={pwa,api} dev --stream",
    "dev:api": "npx lerna run --scope=api dev",
    "dev:pwa": "npx lerna run --scope=pwa dev",
    "dev:emulate": "npx lerna run --scope={pwa,api} dev:emulate --stream",
    "translate:pwa": "npx run generate:translations -w pwa",
    "build:pwa": "npx lerna run --scope=pwa build",
    "build:api": "npx lerna run --scope=api build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KeyngnaertLotte/Lotte-Antje-Alessia.git"
  },
  "author": "MCT",
  "bugs": {
    "url": "https://github.com/KeyngnaertLotte/Lotte-Antje-Alessia/issues"
  },
  "homepage": "https://github.com/KeyngnaertLotte/Lotte-Antje-Alessia#readme",
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "bracketSpacing": true,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "useTabs": false
  },
  "devDependencies": {
    "lerna": "^8.0.0"
  },
  "dependencies": {
    "mongodb-memory-server": "^9.1.3"
  }
}
